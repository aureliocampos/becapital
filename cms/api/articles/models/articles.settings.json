{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid"
    },
    "date": {
      "type": "date"
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "categories": {
      "collection": "categories",
      "via": "articles",
      "dominant": true
    },
    "MetaTags": {
      "type": "component",
      "repeatable": true,
      "component": "seo.meta-tags"
    }
  }
